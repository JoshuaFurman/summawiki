{
  "manifest_version": 3,
  "name": "Wikipedia Link Preview",
  "version": "1.0",
  "description": "Displays a preview of Wikipedia pages when you hover over their links.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "exclude_matches": ["*://*.wikipedia.org/*"]
    }
  ],
  "permissions": ["activeTab", "scripting", "tabs"]
}
